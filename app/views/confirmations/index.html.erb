
<%#= link_to "Advance Confirmation Search", new_search_path %>
<table class="table table-striped table-bordered">
	<thead>
	<tr>
		<th>Confirmation Ref.</th>
		<th>Confirmation Receipt No.</th>
		<th>Diet/Year</th>
		<th>Recipient Country</th>
		<th>Candidate No.</th>
		<th>Created By</th>
		<th>At Office</th>
		<th>Confirmation Type</th>
		<th>Created Date</th>
	</tr>
	</thead>
	<tbody >
		<%= will_paginate @confirms %>
		<% @confirms.each do |confirm| %>
		<tr>
			<td> <%= confirm.ref_no %> </td>
			<td> <%= confirm.receipt_no %> </td>
			<td> <%= confirm.diet.DietName %> <%= confirm.year.YearName %></td>
			<td> <%= confirm.confirm_country.countryName %></td>
			<td> <%= confirm.exam_no %> </td>
			<td> <%= confirm.user.surname %> <%= confirm.user.othernames %> </td>
			<td> <%= confirm.office.office_name %></td>
			<td> <%= confirm.confirm_type.typeName %></td>
			<td> <%= confirm.updated_at %></td>
			
			<td><%= link_to "Details",confirmation_url(confirm) %></td>   
		</tr>

		<%end%>
	</tbody>
</table>

