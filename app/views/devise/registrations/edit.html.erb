<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if @user == current_user %>

  <div class="form-group">
    <%= f.label :office_id, "Waec Offices" %><br />
    <%= f.collection_select :office_id, Office.order(:office_name), :id, :office_name, include_blank: true , class: "form-control" %>
  </div>

   <div class="form-group">
   <%= f.label "L/P No." %><br />
   <%= f.text_field :lp_no, autofocus: true, autocomplete: "lp_no",class:"form-control" %>
  </div>

  <div class="form-group">
   <%= f.label :username %><br />
   <%= f.text_field :username, autofocus: true, autocomplete: "username",class:"form-control" %>
  </div>

  <div class="form-group">
   <%= f.label :title %><br />
  <%= f.select :title, options_for_select([['Mr.' ,'Mr'], ['Mrs.', 'Mrs'], ['Miss.', 'Miss'], ['Dr.', 'Dr'], ['Alhaji.', 'Alhaji'], ['Rev.', 'Rev']]) %>
  </div>

  <div class="form-group">
   <%= f.label :surname %><br />
   <%= f.text_field :surname, autofocus: true, autocomplete: "surname",class:"form-control" %>
  </div>

  <div class="form-group">
   <%= f.label :othernames %><br />
   <%= f.text_field :othernames, autofocus: true, autocomplete: "othernames",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" , class:"form-control"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" ,class:"form-control" %>
  </div>

  <div><%= f.check_box :is_management, {}, true %> <%= f.label :is_management, "Management Staff?" %> </div>

   <% elsif current_user.admin?   %>

   <div><%= f.check_box :is_management, {}, true %> <%= f.label :is_management, "Management Staff?" %> </div>

   <div><%= f.check_box :is_management, {}, true %> <%= f.label :is_management, "Management Staff?" %> </div>

  <% end %>


  <div class="actions">
    <%= f.submit "Update", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-primary btn-lg "%></p>

<%= link_to "Back", :back %>
