<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Diet</th>
      <th>Year</th>
      <th>Exam no</th>
      <th>Confirm type</th>
      <th>Amount</th>
      <th>Receipt no</th>
      <th>Printed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.diet %></td>
        <td><%= payment.year %></td>
        <td><%= payment.exam_no %></td>
        <td><%= payment.confirm_type %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.receipt_no %></td>
        <td><%= payment.printed %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

