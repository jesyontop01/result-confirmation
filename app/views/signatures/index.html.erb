<p id="notice"><%= notice %></p>

<h1>Signatures</h1>

<table>
  <thead>
    <tr>
      <th>Filetype</th>
      <th>Filename</th>
      <th>Filesize</th>
      <th>Base64</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signatures.each do |signature| %>
      <tr>
        <td><%= signature.filetype %></td>
        <td><%= signature.filename %></td>
        <td><%= signature.filesize %></td>
        <td><%= signature.base64 %></td>
        <td><%= signature.user %></td>
        <td><%= link_to 'Show', signature %></td>
        <td><%= link_to 'Edit', edit_signature_path(signature) %></td>
        <td><%= link_to 'Destroy', signature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Signature', new_signature_path %>
